/**
 * @file Firestore Security Rules
 * @description This ruleset enforces open access to all data, effectively disabling security.
 *              This is due to the user's explicit request to "取消该安全性规则".
 * @note This configuration is highly insecure and should ONLY be used for prototyping and local development.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Open access to all posts.
    match /posts/{postId} {
      /**
       * @description Allows any user to read, create, update, and delete posts.
       * @path /posts/{postId}
       * @allow (get, list, create, update, delete) - Any user.
       * @deny None. This rule is intentionally open.
       * @principle Security is disabled.
       */
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    // Open access to all comments.
    match /comments/{commentId} {
      /**
       * @description Allows any user to read, create, update, and delete comments.
       * @path /comments/{commentId}
       * @allow (get, list, create, update, delete) - Any user.
       * @deny None. This rule is intentionally open.
       * @principle Security is disabled.
       */
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    // Open access to all user profiles.
    match /users/{userId} {
      /**
       * @description Allows any user to read, create, update, and delete user profiles.
       * @path /users/{userId}
       * @allow (get, list, create, update, delete) - Any user.
       * @deny None. This rule is intentionally open.
       * @principle Security is disabled.
       */
      allow get, list: if true;
      allow create, update, delete: if true;
    }
  }
}